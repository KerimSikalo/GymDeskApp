@model IEnumerable<Aplikacija.Models.Vezba>
@{
    ViewData["Title"] = "Šabloni vežbi";
}

<style>
    .templates-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

        .templates-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .templates-title {
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3), 0 4px 8px rgba(0, 0, 0, 0.2);
        font-weight: 800;
        font-size: 2.8rem;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: -0.02em;
        position: relative;
        animation: slideInDown 0.6s ease-out;
    }

        .templates-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: #ffffff;
            border-radius: 2px;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.3);
        }

    .alert-modern {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: none;
        border-radius: 16px;
        color: #495057;
        font-weight: 500;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        border-left: 4px solid;
        animation: slideInLeft 0.6s ease-out 0.2s;
        animation-fill-mode: both;
    }

        .alert-modern.alert-success {
            border-left-color: #28a745;
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.1), rgba(255, 255, 255, 0.95));
        }

        .alert-modern.alert-info {
            border-left-color: #17a2b8;
            background: linear-gradient(135deg, rgba(23, 162, 184, 0.1), rgba(255, 255, 255, 0.95));
        }

    .template-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 10px 20px rgba(0, 0, 0, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .template-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(135deg, #f55f3a, #e44e2e);
        }

        .template-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #f55f3a, #e44e2e, #f55f3a);
            background-size: 200% 100%;
            animation: shimmer 3s linear infinite;
        }

    @@keyframes shimmer {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    .template-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 32px 64px rgba(0, 0, 0, 0.15), 0 16px 32px rgba(245, 95, 58, 0.1);
    }

    .card-body-modern {
        padding: 2rem;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .exercise-title {
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 1.4rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .title-icon {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        flex-shrink: 0;
    }

    .badges-section {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 2rem;
    }

    .badge-modern {
        border-radius: 12px;
        padding: 0.4rem 0.8rem;
        font-size: 0.8rem;
        font-weight: 600;
        box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
        border: none;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .badge-serije {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
    }

    .badge-ponavljanja {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
    }

    .badge-tezina {
        background: linear-gradient(135deg, #ffc107, #ff8c00);
        color: white;
    }

    .badge-trajanje {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
    }

    .form-section {
        background: linear-gradient(135deg, rgba(248, 249, 250, 0.8), rgba(255, 255, 255, 0.8));
        border-radius: 16px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid rgba(0, 0, 0, 0.05);
        backdrop-filter: blur(5px);
    }

    .form-floating-mini {
        position: relative;
        margin-bottom: 1rem;
    }

        .form-floating-mini .form-control {
            border: 2px solid rgba(245, 95, 58, 0.1);
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            height: auto;
            padding-top: 1.25rem;
            padding-bottom: 0.5rem;
        }

            .form-floating-mini .form-control:focus {
                border-color: #f55f3a;
                box-shadow: 0 0 0 0.15rem rgba(245, 95, 58, 0.15);
                background: rgba(255, 255, 255, 0.95);
                transform: translateY(-1px);
            }

        .form-floating-mini label {
            position: absolute;
            top: 0.5rem;
            left: 1rem;
            color: #6c757d;
            font-weight: 600;
            font-size: 0.75rem;
            transition: all 0.3s ease;
            pointer-events: none;
            opacity: 0.8;
        }

        .form-floating-mini .form-control:focus ~ label {
            color: #f55f3a;
            font-weight: 700;
        }

    .add-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 1.5rem;
        font-size: 0.95rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0 6px 16px rgba(40, 167, 69, 0.3);
        width: 100%;
        margin-top: auto;
    }

        .add-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 24px rgba(40, 167, 69, 0.4);
        }

            .add-btn:hover::before {
                left: 100%;
            }

        .add-btn:active {
            transform: translateY(0);
        }

    .back-section {
        display: flex;
        justify-content: center;
        margin-top: 3rem;
        animation: slideInUp 0.8s ease-out 0.8s;
        animation-fill-mode: both;
    }

    .back-btn {
        background: rgba(108, 117, 125, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(108, 117, 125, 0.2);
        border-radius: 16px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }

        .back-btn:hover {
            background: rgba(108, 117, 125, 0.2);
            border-color: rgba(108, 117, 125, 0.4);
            color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 10px 24px rgba(108, 117, 125, 0.2);
            text-decoration: none;
        }

    @@keyframes slideInDown {
        from {
            opacity: 0;
            transform: translateY(-30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Grid animations */
    .col-md-6 {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }

        .col-md-6:nth-child(1) {
            animation-delay: 0.4s;
        }

        .col-md-6:nth-child(2) {
            animation-delay: 0.5s;
        }

        .col-md-6:nth-child(3) {
            animation-delay: 0.6s;
        }

        .col-md-6:nth-child(4) {
            animation-delay: 0.4s;
        }

        .col-md-6:nth-child(5) {
            animation-delay: 0.5s;
        }

        .col-md-6:nth-child(6) {
            animation-delay: 0.6s;
        }

        .col-md-6:nth-child(7) {
            animation-delay: 0.4s;
        }

        .col-md-6:nth-child(8) {
            animation-delay: 0.5s;
        }

        .col-md-6:nth-child(9) {
            animation-delay: 0.6s;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .templates-container {
            padding: 1.5rem 1rem;
        }

        .templates-title {
            font-size: 2.2rem;
            margin-bottom: 1.5rem;
        }

        .template-card {
            border-radius: 20px;
            margin-bottom: 1.5rem;
        }

        .card-body-modern {
            padding: 1.5rem;
        }

        .exercise-title {
            font-size: 1.2rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .title-icon {
            width: 36px;
            height: 36px;
            font-size: 1rem;
        }

        .form-section {
            padding: 1.25rem;
        }

        .badges-section {
            gap: 0.375rem;
        }

        .badge-modern {
            font-size: 0.75rem;
            padding: 0.3rem 0.6rem;
        }
    }

    @@media (max-width: 576px) {
        .templates-title {
            font-size: 1.8rem;
        }

        .card-body-modern {
            padding: 1.25rem;
        }

        .exercise-title {
            font-size: 1.1rem;
        }

        .form-section {
            padding: 1rem;
        }

        .form-floating-mini .form-control {
            padding: 0.65rem 0.85rem;
            padding-top: 1.1rem;
        }
    }
</style>

<div class="templates-container">
    <div class="container">
        <h2 class="templates-title">
            <i class="fas fa-magic me-3"></i>Šabloni vežbi
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-modern alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="alert-modern alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Kliknite na vežbu da je dodajte u trening. Možete prilagoditi vrednosti pre dodavanja.
        </div>

        <div class="row">
            @foreach (var sablon in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="template-card">
                        <div class="card-body-modern">
                            <h5 class="exercise-title">
                                <div class="title-icon">
                                    <i class="fas fa-dumbbell"></i>
                                </div>
                                @sablon.NazivVezbe
                            </h5>

                            <div class="badges-section">
                                @if (sablon.Serije > 0 && sablon.Ponavljanja > 0)
                                {
                                    <span class="badge-modern badge-serije">
                                        <i class="fas fa-layer-group me-1"></i>
                                        @sablon.Serije serija
                                    </span>
                                    <span class="badge-modern badge-ponavljanja">
                                        <i class="fas fa-redo me-1"></i>
                                        @sablon.Ponavljanja ponavljanja
                                    </span>
                                }

                                @if (sablon.Tezina.HasValue)
                                {
                                    <span class="badge-modern badge-tezina">
                                        <i class="fas fa-weight-hanging me-1"></i>
                                        @sablon.Tezina kg
                                    </span>
                                }

                                @if (sablon.Trajanje.HasValue)
                                {
                                    <span class="badge-modern badge-trajanje">
                                        <i class="fas fa-stopwatch me-1"></i>
                                        @sablon.Trajanje.Value.ToString(@"mm\:ss")
                                    </span>
                                }
                            </div>

                            <form asp-action="DodajSablonVezbe" method="post" class="needs-validation" novalidate>
                                <input type="hidden" name="treningId" value="@ViewBag.TreningId" />
                                <input type="hidden" name="nazivVezbe" value="@sablon.NazivVezbe" />

                                <div class="form-section">
                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <div class="form-floating-mini">
                                                <input type="number" name="serije" class="form-control"
                                                       value="@sablon.Serije" min="1" max="20" required />
                                                <label>Serije</label>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating-mini">
                                                <input type="number" name="ponavljanja" class="form-control"
                                                       value="@sablon.Ponavljanja" min="1" max="100" required />
                                                <label>Ponavljanja</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row g-2">
                                        <div class="col-6">
                                            <div class="form-floating-mini">
                                                <input type="number" name="tezina" class="form-control"
                                                       value="@sablon.Tezina" step="0.5" min="0.5" max="500" />
                                                <label>Težina (kg)</label>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-floating-mini">
                                                <input type="time" name="trajanje" class="form-control"
                                                       value="@sablon.Trajanje?.ToString(@"hh\:mm")" />
                                                <label>Trajanje</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="add-btn">
                                    <i class="fas fa-plus me-2"></i>
                                    Dodaj u trening
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="back-section">
            <a asp-action="Details" asp-route-id="@ViewBag.TreningId" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                Nazad na trening
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Form submission animations
            var forms = document.querySelectorAll('form');

            forms.forEach(function(form) {
                var addBtn = form.querySelector('.add-btn');

                if (form && addBtn) {
                    form.addEventListener('submit', function() {
                        addBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Dodajem...';
                        addBtn.disabled = true;
                    });
                }
            });
        });
    </script>
}