@model Aplikacija.Models.Trening

@{
    ViewData["Title"] = "Obriši trening";
}

<h1 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Obriši trening</h1>

<div class="alert alert-warning border-warning shadow-sm">
    <h5><i class="fas fa-exclamation-triangle me-2"></i>Jeste li sigurni da želite obrisati ovaj trening?</h5>
    <p class="mb-0">Ova radnja je nepovratna!</p>
</div>

<div class="card shadow-sm border-danger mt-4">
    <div class="card-header bg-danger text-white">
        <strong>Detalji treninga</strong>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Datum)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Datum)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Vrijeme)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Vrijeme)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tip)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tip)</dd>

            <dt class="col-sm-3">Član</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Clan.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Trener)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Trener.Email)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4 d-flex gap-2">
    <input type="hidden" asp-for="IdTrening" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> Obriši
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Nazad na listu
    </a>
</form>
