@model Aplikacija.Models.Trening

@{
    ViewData["Title"] = "Uredi trening";
}

<div class="container mt-5">
    <h2 class="text-dark fw-bold mb-4">Uredi trening</h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdTrening" />

                <div class="mb-3">
                    <label asp-for="Datum" class="form-label"></label>
                    <input asp-for="Datum" class="form-control" type="date" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Vrijeme" class="form-label"></label>
                    <input asp-for="Vrijeme" class="form-control" type="time" />
                    <span asp-validation-for="Vrijeme" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Tip" class="form-label"></label>
                    <select asp-for="Tip" class="form-select" asp-items="Html.GetEnumSelectList<VrstaTreninga>()">
                        <option value="">Odaberite vrstu treninga</option>
                    </select>
                    <span asp-validation-for="Tip" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ClanId" class="form-label">Član</label>
                    <select asp-for="ClanId" class="form-select" asp-items="ViewBag.ClanId as SelectList">
                        <option value="">Odaberite člana</option>
                    </select>
                    <span asp-validation-for="ClanId" class="text-danger"></span>
                </div>

                @if (ViewBag.IsAdmin)
                {
                    <div class="mb-3">
                        <label asp-for="TrenerId" class="form-label">Trener</label>
                        <select asp-for="TrenerId" class="form-select" asp-items="ViewBag.TrenerId as SelectList">
                            <option value="">Odaberite trenera</option>
                        </select>
                        <span asp-validation-for="TrenerId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <input type="hidden" asp-for="TrenerId" />
                }

                <button type="submit" class="btn btn-primary">Sačuvaj</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Odustani</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
