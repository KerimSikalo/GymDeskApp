                <a asp-action="Edit" asp-route-id="@item.IdPrijava">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPrijava">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPrijava">Delete</a>
