@model IEnumerable<Aplikacija.Models.PrijavaZaZaposljavanje>
@{
    ViewData["Title"] = "Kandidati za posao";
}

<style>
    .candidates-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

        .candidates-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 80%, rgba(120, 119, 198, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .candidates-title {
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3), 0 4px 8px rgba(0, 0, 0, 0.2);
        font-weight: 800;
        font-size: 2.8rem;
        text-align: center;
        margin-bottom: 3rem;
        letter-spacing: -0.02em;
        position: relative;
    }

        .candidates-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: #ffffff;
            border-radius: 2px;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.3);
        }

    .candidate-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1), 0 10px 20px rgba(0, 0, 0, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
        transition: all 0.4s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .candidate-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2, #667eea);
            background-size: 200% 100%;
            animation: shimmer 3s linear infinite;
        }

    @@keyframes shimmer {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    .candidate-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 32px 64px rgba(0, 0, 0, 0.15), 0 16px 32px rgba(102, 126, 234, 0.1);
    }

    .candidate-link {
        text-decoration: none;
        color: inherit;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .candidate-link:hover {
            text-decoration: none;
            color: inherit;
        }

    .card-body-modern {
        padding: 2rem;
        text-align: center;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .profile-image-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .profile-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 4px solid rgba(102, 126, 234, 0.2);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1), 0 4px 12px rgba(102, 126, 234, 0.2);
        transition: all 0.3s ease;
        object-fit: cover;
    }

    .candidate-card:hover .profile-image {
        border-color: #667eea;
        transform: scale(1.05);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15), 0 6px 16px rgba(102, 126, 234, 0.3);
    }

    .profile-image-wrapper::after {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        border-radius: 50%;
        background: linear-gradient(45deg, #667eea, #764ba2);
        z-index: -1;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .candidate-card:hover .profile-image-wrapper::after {
        opacity: 0.3;
    }

    .candidate-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        transition: all 0.3s ease;
    }

    .candidate-card:hover .candidate-name {
        color: #667eea;
        transform: translateY(-2px);
    }

    .candidate-email {
        color: #6c757d;
        font-size: 0.95rem;
        font-weight: 500;
        transition: all 0.3s ease;
        margin: 0;
    }

    .candidate-card:hover .candidate-email {
        color: #495057;
    }

    .card-footer-modern {
        background: linear-gradient(135deg, rgba(248, 249, 250, 0.9), rgba(255, 255, 255, 0.9));
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(0, 0, 0, 0.06);
        padding: 1.25rem;
        text-align: center;
    }

    .delete-btn {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: none;
        border-radius: 12px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(220, 53, 69, 0.2);
        position: relative;
        overflow: hidden;
    }

        .delete-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
        }

            .delete-btn:hover::before {
                left: 100%;
            }

        .delete-btn:active {
            transform: translateY(0);
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .empty-state-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.6;
    }

    .empty-state-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .empty-state-text {
        font-size: 1.1rem;
        opacity: 0.8;
    }

    /* Grid animations */
    .col {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
    }

        .col:nth-child(1) {
            animation-delay: 0.1s;
        }

        .col:nth-child(2) {
            animation-delay: 0.2s;
        }

        .col:nth-child(3) {
            animation-delay: 0.3s;
        }

        .col:nth-child(4) {
            animation-delay: 0.4s;
        }

        .col:nth-child(5) {
            animation-delay: 0.1s;
        }

        .col:nth-child(6) {
            animation-delay: 0.2s;
        }

        .col:nth-child(7) {
            animation-delay: 0.3s;
        }

        .col:nth-child(8) {
            animation-delay: 0.4s;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .candidates-container {
            padding: 1.5rem 1rem;
        }

        .candidates-title {
            font-size: 2.2rem;
            margin-bottom: 2rem;
        }

        .candidate-card {
            border-radius: 20px;
        }

        .card-body-modern {
            padding: 1.5rem;
        }

        .profile-image {
            width: 80px;
            height: 80px;
        }

        .candidate-name {
            font-size: 1.1rem;
        }

        .candidate-email {
            font-size: 0.9rem;
        }
    }

    @@media (max-width: 576px) {
        .candidates-title {
            font-size: 1.8rem;
        }

        .card-body-modern {
            padding: 1.25rem;
        }

        .profile-image {
            width: 70px;
            height: 70px;
        }
    }
</style>

<div class="candidates-container">
    <div class="container">
        <h1 class="candidates-title">
            <i class="fas fa-users me-3"></i>Kandidati za posao
        </h1>

        @if (Model.Any())
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="candidate-card">
                            <a asp-action="Details" asp-route-id="@item.IdPrijava" class="candidate-link">
                                <div class="card-body-modern">
                                    <div class="profile-image-wrapper">
                                        <img src="~/images/user-profile-icon.webp"
                                             class="profile-image"
                                             alt="Kandidat @item.Korisnik.Ime @item.Korisnik.Prezime"
                                             onerror="this.src='data:image/svg+xml;base64,'" />
                                    </div>
                                    <h5 class="candidate-name">@item.Korisnik.Ime @item.Korisnik.Prezime</h5>
                                    <p class="candidate-email">@item.Korisnik.Email</p>
                                </div>
                            </a>
                            <div class="card-footer-modern">
                                <a asp-action="Delete" asp-route-id="@item.IdPrijava"
                                   class="delete-btn"
                                   title="Obriši kandidata"
                                   onclick="return confirm('Da li ste sigurni da želite da obrišete ovog kandidata?')">
                                    <i class="fas fa-trash me-1"></i>
                                    Obriši
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="fas fa-user-slash"></i>
                </div>
                <h3 class="empty-state-title">Nema kandidata</h3>
                <p class="empty-state-text">Trenutno nema prijavljenih kandidata za posao.</p>
            </div>
        }
    </div>
</div>