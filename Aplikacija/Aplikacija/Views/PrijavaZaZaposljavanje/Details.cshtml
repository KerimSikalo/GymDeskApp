@model Aplikacija.Models.PrijavaZaZaposljavanje

@{
    ViewData["Title"] = "Detalji prijave";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background-color: #f55f3a;">
                    <h4 class="mb-0">Detalji prijave za posao</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Ime:</dt>
                        <dd class="col-sm-8">@Model.Ime</dd>

                        <dt class="col-sm-4">Prezime:</dt>
                        <dd class="col-sm-8">@Model.Prezime</dd>

                        <dt class="col-sm-4">Email adresa:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">CV (biografija):</dt>
                        <dd class="col-sm-8">@Model.CV</dd>

                        <dt class="col-sm-4">Korisnik:</dt>
                        <dd class="col-sm-8">@Model.Korisnik?.Email</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">Nazad</a>
                </div>
            </div>
        </div>
    </div>
</div>
