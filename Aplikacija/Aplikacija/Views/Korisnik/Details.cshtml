@model Aplikacija.Models.Korisnik

@{
    ViewData["Title"] = "Detalji korisnika";
    var userRole = User.IsInRole("Admin") || User.IsInRole("Recepcioner") || User.IsInRole("Trener");
}

<div class="container mt-5">
    <div class="card shadow rounded-4 border-0">
        <div class="card-header bg-white border-bottom-0 text-center py-4">
            <h3 class="fw-bold text-dark mb-1">👤 Profil korisnika</h3>
            <p class="text-muted mb-0">Osnovni podaci o korisniku</p>
        </div>
        <div class="card-body px-5 py-4">
            <div class="row mb-4">
                <div class="col-md-4 text-muted">👨‍💼 <strong>Ime:</strong></div>
                <div class="col-md-8 fw-semibold">@Model.Ime</div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">👨‍💼 <strong>Prezime:</strong></div>
                <div class="col-md-8 fw-semibold">@Model.Prezime</div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">🔐 <strong>Korisničko ime:</strong></div>
                <div class="col-md-8 fw-semibold">@Model.UserName</div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4 text-muted">📧 <strong>Email adresa:</strong></div>
                <div class="col-md-8 fw-semibold">@Model.Email</div>
            </div>

            @if (userRole)
            {
                <div class="row mb-4">
                    <div class="col-md-4 text-muted">🧾 <strong>Tip korisnika:</strong></div>
                    <div class="col-md-8 fw-semibold">@Model.Tip</div>
                </div>
            }
        </div>
        <div class="card-footer bg-light d-flex justify-content-between px-4 py-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                Nazad na početnu
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("Recepcioner"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white rounded-pill px-4">
                    ✏️ Uredi
                </a>
            }
        </div>
    </div>
</div>
