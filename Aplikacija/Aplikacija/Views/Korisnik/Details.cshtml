@model Aplikacija.Models.Korisnik

@{
    ViewData["Title"] = "Detalji korisnika";
    var userRole = User.IsInRole("Admin") || User.IsInRole("Recepcioner") || User.IsInRole("Trener");
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header text-white" style="background-color: #f55f3a;">
            <h4 class="mb-0">Detalji korisnika</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Ime korisnika</dt>
                <dd class="col-sm-9 fw-bold">@Model.Ime</dd>

                <dt class="col-sm-3 text-muted">Prezime korisnika</dt>
                <dd class="col-sm-9 fw-bold">@Model.Prezime</dd>

                <dt class="col-sm-3 text-muted">Korisničko ime</dt>
                <dd class="col-sm-9 fw-bold">@Model.Username</dd>

                @if (User.IsInRole("Admin"))
                {
                <dt class="col-sm-3 text-muted">Lozinka</dt>
                <dd class="col-sm-9 fw-bold">@Model.Password</dd>
                }

                <dt class="col-sm-3 text-muted">Email adresa</dt>
                <dd class="col-sm-9 fw-bold">@Model.Email</dd>

                @if (userRole)
                {
                    <dt class="col-sm-3 text-muted">Tip korisnika</dt>
                    <dd class="col-sm-9 fw-bold">@Model.Tip</dd>
                }
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between bg-light">
            <a asp-action="Index" class="btn btn-outline-secondary">Nazad</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Recepcioner"))
            {
                <a asp-action="Edit" asp-route-id="@Model.IdKorisnik" class="btn btn-primary">Uredi</a>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
