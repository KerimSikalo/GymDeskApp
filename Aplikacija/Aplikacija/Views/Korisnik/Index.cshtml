@model IEnumerable<Aplikacija.Models.Korisnik>

@{
    ViewData["Title"] = "Korisnici";
    var currentUserId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-dark fw-bold">Lista korisnika</h2>
        @if (User.IsInRole("Admin"))
        {
            <a class="btn btn-primary" asp-action="Create">+ Novi korisnik</a>
        }
    </div>

    <table class="table table-bordered table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ime)</th>
                <th>@Html.DisplayNameFor(model => model.Prezime)</th>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                @if (User.IsInRole("Admin"))
                    {
                <th>@Html.DisplayNameFor(model => model.Password)</th>
                    }
                <th>@Html.DisplayNameFor(model => model.Email)</th>

                @if (User.IsInRole("Admin"))
                {
                    <th>@Html.DisplayNameFor(model => model.Tip)</th>
                }

                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                bool isCurrentUser = item.IdentityUserId == currentUserId;

                <tr>
                    <td>@item.Ime</td>
                    <td>@item.Prezime</td>
                    <td>@item.Username</td>
                    @if (User.IsInRole("Admin"))
                    {
                    <td>@item.Password</td>
                    }
                    <td>@item.Email</td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td>@item.Tip</td>
                    }

                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                            @if (User.IsInRole("Admin") || User.IsInRole("Recepcioner"))
                            {
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.IdKorisnik">Edit</a>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.IdKorisnik">Delete</a>
                            }

                            @if (User.IsInRole("Admin") || User.IsInRole("Recepcioner") || User.IsInRole("Trener") || isCurrentUser)
                            {
                                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.IdKorisnik">Detalji</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
