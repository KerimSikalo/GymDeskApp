@model Aplikacija.Models.Korisnik

@{
    ViewData["Title"] = "Obriši korisnika";
}

<h1 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Obriši korisnika</h1>

<div class="alert alert-warning border-warning shadow-sm">
    <h5><i class="fas fa-exclamation-triangle me-2"></i>Jeste li sigurni da želite obrisati ovog korisnika?</h5>
    <p class="mb-0">Ova radnja je nepovratna!</p>
</div>

<div class="card shadow-sm border-danger mt-4">
    <div class="card-header bg-danger text-white">
        <strong>Detalji korisnika</strong>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Ime</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Ime)</dd>

            <dt class="col-sm-3">Prezime</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Prezime)</dd>

            <dt class="col-sm-3">Korisničko ime</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">Tip korisnika</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Tip)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4 d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt me-1"></i> Obriši
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Nazad na listu
    </a>
</form>
