@model Aplikacija.Models.Korisnik

@{
    ViewData["Title"] = "Brisanje korisnika";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded-4 border-danger">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h3><i class="bi bi-trash-fill"></i> Potvrda brisanja</h3>
                </div>

                <div class="card-body">
                    <p class="lead text-center mb-4">
                        Da li ste sigurni da želite obrisati sljedećeg korisnika?
                    </p>

                    <dl class="row">
                        <dt class="col-sm-4">Ime</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Ime)</dd>

                        <dt class="col-sm-4">Prezime</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Prezime)</dd>

                        <dt class="col-sm-4">Korisničko ime</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.UserName)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Tip korisnika</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Tip)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="text-center mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="bi bi-trash"></i> Obriši
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle"></i> Nazad na listu
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
