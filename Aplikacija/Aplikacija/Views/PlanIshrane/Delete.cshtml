@model Aplikacija.Models.PlanIshrane

@{
    ViewData["Title"] = "Brisanje plana ishrane";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-danger">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h3> Da li ste sigurni da želite da obrišete ovaj plan?</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold text-muted">🎯 Cilj:</dt>
                <dd class="col-sm-9">@Model.Ciljevi</dd>

                <dt class="col-sm-3 fw-bold text-muted">📄 Plan:</dt>
                <dd class="col-sm-9">@Model.Plan</dd>

                <dt class="col-sm-3 fw-bold text-muted">📅 Datum:</dt>
                <dd class="col-sm-9">@Model.DatumGenerisanja.ToShortDateString()</dd>

                <dt class="col-sm-3 fw-bold text-muted">⚖️ Kilaža:</dt>
                <dd class="col-sm-9">@Model.Kilaza kg</dd>

                <dt class="col-sm-3 fw-bold text-muted">👤 Godine:</dt>
                <dd class="col-sm-9">@Model.Godine</dd>

                <dt class="col-sm-3 fw-bold text-muted">📧 Član (email):</dt>
                <dd class="col-sm-9">@Model.Clan.Email</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdPlanishrane" />
                <button type="submit" class="btn btn-danger">Obriši</button>
                <a asp-action="Index" class="btn btn-outline-secondary ms-2">Nazad na listu</a>
            </form>
        </div>
    </div>
</div>
