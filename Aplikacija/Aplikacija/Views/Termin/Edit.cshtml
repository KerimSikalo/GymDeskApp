@model Aplikacija.Models.Termin

@{
    ViewData["Title"] = "Uredi termin";
}

<h1 class="mb-4" style="color: #f55f3a;">
    <i class="fas fa-edit me-2"></i>Uredi termin
</h1>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdTermin" />

            <div class="mb-3">
                <label asp-for="Datum" class="form-label"><strong>Datum</strong></label>
                <input asp-for="Datum" class="form-control" type="date" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vrijeme" class="form-label"><strong>Vrijeme</strong></label>
                <input asp-for="Vrijeme" class="form-control" type="time" />
                <span asp-validation-for="Vrijeme" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Vrsta" class="form-label"><strong>Vrsta treninga</strong></label>
                <select asp-for="Vrsta" class="form-control" asp-items="Html.GetEnumSelectList<VrstaTreninga>()"></select>
                <span asp-validation-for="Vrsta" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="TrenerId" />


            <div class="d-flex gap-2">
                <input type="submit" value="Sačuvaj promjene" class="btn text-white" style="background-color: #f55f3a;" />
                <a asp-action="Index" class="btn btn-secondary">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
