@model Aplikacija.Models.Termin

@{
    ViewData["Title"] = "Obriši termin";
}

<h1 class="mb-4 text-danger"><i class="fas fa-trash-alt me-2"></i>Obriši termin</h1>

<div class="alert alert-warning border-warning shadow-sm">
    <h5><i class="fas fa-exclamation-triangle me-2"></i>Jeste li sigurni da želite obrisati ovaj termin?</h5>
    <p class="mb-0">Ova radnja je nepovratna!</p>
</div>

<div class="card shadow-sm border-danger mt-4">
    <div class="card-header bg-danger text-white">
        <strong>Detalji termina</strong>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Datum:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Datum)</dd>

            <dt class="col-sm-3">Vrijeme:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Vrijeme)</dd>

            <dt class="col-sm-3">Vrsta treninga:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Vrsta)</dd>

            <dt class="col-sm-3">Trener:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Trener.Email)</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="mt-4">
    <input type="hidden" asp-for="IdTermin" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt me-1"></i> Obriši
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Nazad na listu
        </a>
    </div>
</form>
