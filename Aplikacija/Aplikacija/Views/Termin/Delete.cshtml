@model Aplikacija.Models.Termin
@{
    ViewData["Title"] = "Obriši termin";
}

<style>
    .delete-container {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 50%, #dc3545 100%);
        min-height: 100vh;
        padding: 2rem 0;
        position: relative;
        overflow: hidden;
    }

        .delete-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(circle at 20% 80%, rgba(255, 107, 107, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
            pointer-events: none;
        }

    .delete-title {
        color: #ffffff;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3), 0 4px 8px rgba(0, 0, 0, 0.2);
        font-weight: 800;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: -0.02em;
        position: relative;
    }

        .delete-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: #ffffff;
            border-radius: 2px;
            box-shadow: 0 2px 8px rgba(255, 255, 255, 0.3);
        }

        .delete-title i {
            animation: shake 2s infinite;
        }

    @@keyframes shake {
        0%, 100% {
            transform: rotate(0deg);
        }

        10%, 30%, 50%, 70%, 90% {
            transform: rotate(-10deg);
        }

        20%, 40%, 60%, 80% {
            transform: rotate(10deg);
        }
    }

    .warning-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 2px solid rgba(255, 193, 7, 0.3);
        box-shadow: 0 20px 40px rgba(255, 193, 7, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1), inset 0 1px 0 rgba(255, 255, 255, 0.8);
        position: relative;
        overflow: hidden;
        margin-bottom: 2rem;
        animation: slideInLeft 0.6s ease-out 0.2s;
        animation-fill-mode: both;
    }

        .warning-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #ffc107, #ff8c00, #ffc107);
            background-size: 200% 100%;
            animation: shimmer 3s linear infinite;
        }

    @@keyframes shimmer {
        0% {
            background-position: -200% 0;
        }

        100% {
            background-position: 200% 0;
        }
    }

    .warning-body {
        padding: 2rem;
    }

    .warning-title {
        color: #ff8c00;
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .warning-title i {
            animation: pulse 2s infinite;
        }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }
    }

    .warning-text {
        color: #6c757d;
        font-size: 1.1rem;
        font-weight: 500;
        margin: 0;
    }

    .details-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 2px solid rgba(220, 53, 69, 0.2);
        box-shadow: 0 20px 40px rgba(220, 53, 69, 0.1), 0 10px 20px rgba(0, 0, 0, 0.05), inset 0 1px 0 rgba(255, 255, 255, 0.8);
        overflow: hidden;
        margin-bottom: 2rem;
        animation: slideInRight 0.6s ease-out 0.4s;
        animation-fill-mode: both;
    }

    .details-header {
        background: linear-gradient(135deg, #dc3545, #c82333);
        color: white;
        padding: 1.5rem 2rem;
        font-size: 1.25rem;
        font-weight: 700;
        position: relative;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

        .details-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        }

    .header-icon {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.5rem;
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }

    .details-body {
        padding: 2rem;
    }

    .detail-row {
        display: flex;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border-radius: 12px;
        margin-bottom: 0.5rem;
    }

        .detail-row:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

        .detail-row:hover {
            background: rgba(220, 53, 69, 0.02);
            padding-left: 1rem;
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.05);
        }

    .detail-icon {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        flex-shrink: 0;
        font-size: 1rem;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
    }

    .detail-content {
        flex: 1;
        min-width: 0;
    }

    .detail-label {
        font-weight: 700;
        color: #495057;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.25rem;
        opacity: 0.8;
    }

    .detail-value {
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 500;
        word-break: break-word;
        line-height: 1.4;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        animation: slideInUp 0.6s ease-out 0.6s;
        animation-fill-mode: both;
    }

    .delete-btn {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        border: none;
        border-radius: 16px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(220, 53, 69, 0.3);
        min-width: 140px;
    }

        .delete-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .delete-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(220, 53, 69, 0.4);
        }

            .delete-btn:hover::before {
                left: 100%;
            }

        .delete-btn:active {
            transform: translateY(0);
        }

    .cancel-btn {
        background: rgba(108, 117, 125, 0.1);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(108, 117, 125, 0.2);
        border-radius: 16px;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 140px;
    }

        .cancel-btn:hover {
            background: rgba(108, 117, 125, 0.2);
            border-color: rgba(108, 117, 125, 0.4);
            color: #495057;
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(108, 117, 125, 0.2);
            text-decoration: none;
        }

    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .delete-container {
            padding: 1.5rem 1rem;
        }

        .delete-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .warning-card,
        .details-card {
            border-radius: 16px;
            margin-bottom: 1.5rem;
        }

        .warning-body,
        .details-body {
            padding: 1.5rem;
        }

        .details-header {
            padding: 1.25rem 1.5rem;
        }

        .action-buttons {
            flex-direction: column;
            align-items: center;
        }

        .delete-btn,
        .cancel-btn {
            width: 100%;
            max-width: 280px;
        }

        .detail-row {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }

        .detail-icon {
            margin-right: 0;
        }

        .detail-content {
            width: 100%;
        }
    }
</style>

<div class="delete-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <h1 class="delete-title position-relative">
                    <i class="fas fa-trash-alt me-3"></i>Obriši termin
                </h1>

                <div class="warning-card">
                    <div class="warning-body">
                        <h5 class="warning-title">
                            <i class="fas fa-exclamation-triangle"></i>
                            Jeste li sigurni da želite obrisati ovaj termin?
                        </h5>
                        <p class="warning-text">
                            Ova radnja je nepovratna i svi podaci termina će biti trajno uklonjeni!
                        </p>
                    </div>
                </div>

                <div class="details-card">
                    <div class="details-header">
                        <div class="header-icon">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        Detalji termina
                    </div>
                    <div class="details-body">
                        <div class="detail-row">
                            <div class="detail-icon">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Datum</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Datum)</div>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Vrijeme</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Vrijeme)</div>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-icon">
                                <i class="fas fa-dumbbell"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Vrsta treninga</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Vrsta)</div>
                            </div>
                        </div>

                        <div class="detail-row">
                            <div class="detail-icon">
                                <i class="fas fa-user-tie"></i>
                            </div>
                            <div class="detail-content">
                                <div class="detail-label">Trener</div>
                                <div class="detail-value">@Html.DisplayFor(model => model.Trener.Email)</div>
                            </div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdTermin" />
                    <div class="action-buttons">
                        <button type="submit" class="delete-btn">
                            <i class="fas fa-trash-alt me-2"></i>
                            Obriši termin
                        </button>
                        <a asp-action="Index" class="cancel-btn">
                            <i class="fas fa-arrow-left me-2"></i>
                            Nazad na listu
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var form = document.querySelector('form');
            var deleteBtn = document.querySelector('.delete-btn');

            if (form && deleteBtn) {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();

                    // Create custom confirmation
                    var confirmed = confirm('Da li ste apsolutno sigurni da želite da obrišete ovaj termin?\n\nOva akcija je nepovratna!');

                    if (confirmed) {
                        deleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Briše se...';
                        deleteBtn.disabled = true;
                        form.submit();
                    }
                });
            }
        });
    </script>
}