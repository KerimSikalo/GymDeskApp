@model Aplikacija.Models.Termin
@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-4">Napravi termin</h1>
<hr class="mb-4" />

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <!-- Forma -->
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* Uslovni prikaz za trenera i admina *@
                    @if (ViewBag.JeTrener == true)
                    {
                        <input type="hidden" asp-for="TrenerId" />
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Trener:</label>
                            <input type="text" class="form-control" value="@User.Identity.Name" readonly />
                            <div class="form-text">Automatski postavljen kao trenutni trener</div>
                        </div>
                    }
                    else if (ViewBag.JeAdmin == true)
                    {
                        <div class="form-group mb-3">
                            <label asp-for="TrenerId" class="form-label fw-bold">Trener:</label>
                            <select asp-for="TrenerId" class="form-control" asp-items="ViewBag.TrenerId">
                                <option value="">-- Izaberite trenera --</option>
                            </select>
                            <span asp-validation-for="TrenerId" class="text-danger"></span>
                            <div class="form-text">Kao admin možete kreirati termin za bilo kojeg trenera</div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="Datum" class="form-label fw-bold">Datum:</label>
                        <input asp-for="Datum" class="form-control" type="date" />
                        <span asp-validation-for="Datum" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Vrijeme" class="form-label fw-bold">Vrijeme:</label>
                        <input asp-for="Vrijeme" class="form-control" type="time" />
                        <span asp-validation-for="Vrijeme" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Vrsta" class="form-label fw-bold">Vrsta treninga:</label>
                        <select asp-for="Vrsta" class="form-control" asp-items="Html.GetEnumSelectList<VrstaTreninga>()">
                            <option value="">-- Izaberite vrstu treninga --</option>
                        </select>
                        <span asp-validation-for="Vrsta" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <input type="submit" value="Kreiraj termin" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Otkaži</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Napomene -->
    <div class="col-md-6 mt-4 mt-md-0">
        <div class="card shadow-sm h-100" style="border: 1px solid #f55f3a;">
            <div class="card-header text-white" style="background-color: #f55f3a;">
                <h5 class="mb-0"><i class="fas fa-sticky-note me-2"></i>Napomene</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-3"><i class="fas fa-calendar-alt text-primary me-2"></i>Datum mora biti današnji ili u budućnosti</li>
                    <li class="mb-3"><i class="fas fa-user-friends text-primary me-2"></i>Individualni treninzi mogu imati samo jednog učesnika</li>
                    <li class="mb-3"><i class="fas fa-user-clock text-primary me-2"></i>Jedan trener ne može imati dva termina u isto vrijeme</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var today = new Date().toISOString().split('T')[0];
            document.querySelector('input[type="date"]').setAttribute('min', today);
        });
    </script>
}
