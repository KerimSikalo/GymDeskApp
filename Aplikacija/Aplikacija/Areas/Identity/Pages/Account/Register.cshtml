@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<div class="register-container">
    <h2 class="title">Registracija</h2>
    <p class="subtitle">Zašto se registrirati na fitness?<br />- Treninzi<br />- Plan ishrane <br />- Oprema </p>

    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <input asp-for="Input.Ime" class="form-control" placeholder="Ime" />
            <span asp-validation-for="Input.Ime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Prezime" class="form-control" placeholder="Prezime" />
            <span asp-validation-for="Input.Prezime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Input.Username" class="form-control" placeholder="Korisničko ime" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Lozinka" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Potvrdi lozinku" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="registerSubmit" type="submit" class="btn-submit">Potvrdi</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}                   